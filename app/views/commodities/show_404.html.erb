<% content_for :top_breadcrumbs do %>
  <%= generate_breadcrumbs safe_join(['Commodity', segmented_commodity_code(@commodity_code)], ' '),
                           [[t('breadcrumb.home'), home_path]] %>
<% end %>

<%= page_header do %>
  <h1 class="govuk-heading-l">
    Commodity <%= segmented_commodity_code @commodity_code %>
  </h1>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <% if @validity_periods.any? %>
      <p>
        The commodity code you entered could not be found for the date selected. The
        code is present for the dates shown below.
      </p>

      <p>
        Click on a date to see the measures present on that date.
      </p>

      <ul class="govuk-list govuk-list--bullet">
        <% @validity_periods.each do |validity_period| %>
          <li>
            From <%= link_to validity_period.validity_start_date.to_formatted_s(:long),
                             commodity_on_date_path(@commodity_code, validity_period.validity_start_date) -%>
            <% if validity_period.validity_end_date.present? -%>
              to <%= link_to validity_period.validity_end_date.to_formatted_s(:long),
                             commodity_on_date_path(@commodity_code, validity_period.validity_end_date) -%>
            <% end -%>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>
        The commodity code you searched for can't be found. Try searching again.
      <p>
    <% end %>

    <p>
      Alternatively, you can visit
      <%= link_to "heading #{@heading_code}", heading_on_date_path(@heading_code, nil) %>
      or
      <% if @search.today? %>
        <%= link_to "chapter #{@chapter_code}", chapter_on_date_path(@chapter_code, nil) %>.
      <% else %>
        <%= link_to "chapter #{@chapter_code}", chapter_on_date_path(@chapter_code, nil) %>
        for <%= Time.zone.today.to_formatted_s :long %>.
      <% end %>
    </p>
  </div>
</div>
