<% chapter = result[1][0] %>
<% headings = result[1][1] %>
<li>
  <div class="chapter">
    <div class="full-code">
      <div class="chapter-code">
        <div class="code-text"><%= chapter.short_code %></div>
      </div>
      <div class="heading-code">&nbsp;</div>
      <div class="commodity-code">
        <div class="code-text">&nbsp;</div>
        <div class="code-text">&nbsp;</div>
        <div class="code-text">&nbsp;</div>
      </div>
    </div>
    <div class="line-text">
      <h4 class="govuk-heading-s govuk-!-margin-bottom-2">
        <a href="<%= chapter_path(chapter, request_id: @search.request_id) %>"><%= sanitize chapter.description %></a>
      </h4>
    </div>
  </div>
  <% if headings.any? %>
    <ul>
      <% headings.each do |heading| %>
        <li>
          <div class="heading">
            <div class="line-text">
              <a href="<%= heading_path(heading, request_id: @search.request_id) %>"><%= sanitize heading.description %></a>
            </div>
            <div class="full-code">
              <div class="chapter-code">
                <div class="code-text"><%= heading.chapter.short_code %></div>
              </div>
              <div class="heading-code">
                <div class="code-text"><%= heading.heading_display_short_code %></div>
              </div>
              <div class="commodity-code">
                <div class="code-text">&nbsp;</div>
                <div class="code-text">&nbsp;</div>
                <div class="code-text">&nbsp;</div>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>
</li>
