<%= rules_of_origin_form_for(current_step) do |form| %>
  <span class="govuk-caption-xl">
    <%= t '.caption' %>
  </span>

  <h1 class="govuk-heading-l">
    <%= t '.title', scheme_title: form.object.scheme_title %>
  </h1>

  <p class="govuk-body-l">
    <%= t '.lead_para' %>
  </p>

  <div class="tariff-markdown">
    <div class="lettered-list">
      <%= govspeak remove_article_reference(form.object.wholly_obtained_text) %>
    </div>

    <%= render 'shared/origin_reference_document', origin_reference_document: form.object.origin_reference_document,
                                                   article_match: find_article_reference(form.object.wholly_obtained_text) if find_article_reference(form.object.wholly_obtained_text) %>

    <% if form.object.wholly_obtained_vessels_text.present? %>
      <%= render 'shared/details', summary: t('.vessel_definition') do %>
        <% if form.object.origin_reference_document %>
          <%= govspeak remove_article_reference(govspeak(form.object.wholly_obtained_vessels_text) %>
          <%= render 'shared/origin_reference_document', origin_reference_document: origin_reference_document,
                                                         article_match: find_article_reference(content) if find_article_reference(content) %>
        <% else %>
          <%= govspeak form.object.wholly_obtained_vessels_text %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <h3 class="govuk-heading-s">
    <%= t 'rules_of_origin.steps.common.next_step' %>
  </h3>

  <div class="tariff-markdown">
    <%= govspeak t '.next_step_md', scheme_title: form.object.scheme_title %>
  </div>
<% end %>
