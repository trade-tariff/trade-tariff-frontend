<h4 class="govuk-heading-s govuk-!-margin-bottom-1">Changes to your commodities:</h4>

<% if changes.empty? %>
  <p class="govuk-body">No changes published</p>
<% else %>
  <table class="govuk-table">
    <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th class="govuk-table__header">Change type</th>
        <th class="govuk-table__header">Commodities Affected</th>
      </tr>
    </thead>
    <tbody class="govuk-table__body">
        <% changes.each do |change| %>
        <tr class="govuk-table__row">
          <td class="govuk-table__cell">
            <%= change.description %>
          </td>
          <td class="govuk-table__cell">
            <%= link_to "#{pluralize(change.count, 'commodity')}", send("#{change.resource_id}_myott_commodity_changes_path", as_of:) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
