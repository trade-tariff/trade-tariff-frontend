<% content_for :back_link do %>
  <% back_link @all_tariff_updates ? myott_preference_selection_path : myott_chapter_selection_path %>
<% end %>

<div class="govuk-body myott-subscriptions">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
    <%= render 'error' if flash.now[:error] %>
      <h1 class="govuk-heading-l">Review chapter selection</h1>
        <h2 class="govuk-heading-m">You have selected <%= @amount_of_selected_chapters %> chapter<%= @amount_of_selected_chapters == 1 ? "" : "s" %></h2>
         <p>
          Review the selected chapters below and  confirm your selection.
          <br/>
          You can edit your chapter preferences at any time.
         </p>
        <div data-controller="chapter-selection">
          <%= form_with url: myott_subscribe_path, method: :post, local: true do %>
            <%= render 'details_selected_sections_chapters', selected_sections_chapters: @selected_sections_chapters %>
            <%= link_to "Edit your chapter preferences", myott_chapter_selection_path, class: "link_button", style: "font-size: 19px;" %>
            <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
            <h2 class="govuk-heading-m">Confirm your selection</h2>
            <p>If you are happy with the selected chapters, continue to confirm your selection.</p>
            <p><%= submit_tag "Continue", class: "govuk-button govuk-!-margin-top-4" %></p>
            <%= hidden_field_tag :all_tariff_updates, @all_tariff_updates %>
          <% end %>
        </div>
    </div>
  </div>
</div>
