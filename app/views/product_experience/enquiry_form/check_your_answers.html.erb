<% enquiry_form_page_title "Enquiry Form Check Your Answers" %>
<% content_for :back_link do %>
  <%= back_link url_for(controller: 'product_experience/enquiry_form', action: 'form', field: @prev_field) %>
<% end %>
<div class="govuk-body">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <%= render 'error' if flash.now[:error] %>
      <h1 class="govuk-heading-l">Check your answers before submitting your form</h1>
      <%= form_with url: product_experience_enquiry_form_submit_form_path, method: :post, local: true do %>
        <dl class="govuk-summary-list">
          <% @enquiry_data.each do |field, value| %>
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
                <%= field_label(field) %>
              </dt>
              <dd class="govuk-summary-list__value">
                <%= display_value_for(field, value) %>
              </dd>
              <dd class="govuk-summary-list__actions">
                <%= link_to 'Change', url_for(controller: 'product_experience/enquiry_form', action: 'form', field: field,  editing: true), class: 'govuk-link' %>
              </dd>
            </div>
          <% end %>
        </dl>
        <p><%= submit_tag "Submit", class: "govuk-button govuk-!-margin-top-4" %></p>
      <% end %>
    </div>
  </div>
</div>
