<% content_for :top_breadcrumbs do %>
  <%= generate_breadcrumbs(
    t('breadcrumb.feedback'),
    [
      [t('breadcrumb.home'), home_path],
      [t('breadcrumb.help'), help_path],
    ]
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-three-quarters">
    <%= page_header 'Give feedback on Online Trade Tariff' %>

    <p class="form-hint govuk-hint">
      Tell us how to improve our service.<br>
      Feedback is anonymous. Do not include any personal information.
    </p>

    <%= form_for @feedback, builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>
      <%= f.govuk_text_area :message,
                            label: nil,
                            max_chars: 500 %>

      <p class="form-hint">
        If you have any questions or need assistance, email <a href="mailto:online.tariff.feedback@hmrc.gov.uk">online.tariff.feedback@hmrc.gov.uk</a>
      </p>

      <div style="display: none;">
        <%= f.govuk_phone_field :telephone,
                             label: { text: 'Telephone (Do not fill out)',
                                      hidden: true },
                             width: 20,
                             max_chars: 100 %>
      </div>

      <%= f.hidden_field :page_useful %>

      <%= f.govuk_submit 'Submit feedback' %>
    <% end %>
  </div>
</div>
